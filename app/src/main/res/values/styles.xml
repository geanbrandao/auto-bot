<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_text_title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/size_text_title</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="style_input_default">
        <item name="android:background">@drawable/bg_input_default</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:padding">@dimen/size_padding_input</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="style_button_default">
        <item name="android:background">@drawable/bg_button_default</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_inverse</item>
        <item name="android:textSize">@dimen/size_text_default</item>
    </style>

    <style name="style_text_label">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/color_text_label</item>
        <item name="android:textSize">@dimen/size_text_default</item>
    </style>

    <style name="style_text_action">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/size_text_default</item>
    </style>
</resources>