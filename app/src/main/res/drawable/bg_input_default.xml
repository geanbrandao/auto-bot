<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/color_background_input" />
            <corners
                android:radius="@dimen/size_corners_default" />
            <stroke
                android:width="@dimen/size_stroke_default"
                android:color="?colorAccent"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/color_background_input" />
            <corners
                android:radius="@dimen/size_corners_default" />
            <stroke
                android:width="@dimen/size_stroke_default"
                android:color="@color/color_stroke_not_focused"/>
        </shape>
    </item>

</selector>